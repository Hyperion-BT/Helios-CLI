{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "outDir": "./dist",
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "esnext"
        ],
        "strict": true,
        "sourceMap": true,
        "target": "esnext",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "baseUrl": "./",
        "paths": {
            "helios": ["./node_modules/helios/helios-internal.d.ts"]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
